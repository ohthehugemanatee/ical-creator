{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "*_test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,

    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.py",
                "cmd": "workbench.action.tasks.runTask Run Unit Tests"
            }
        ]
    }
}